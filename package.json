{
  "name": "ssam",
  "version": "0.22.0",
  "description": "Creative coding sketch helper",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "type": "module",
  "files": [
    "/dist"
  ],
  "scripts": {
    "demo": "vite ./demo --config vite.demo.config.ts",
    "prebuild": "license-checker --exclude 'MIT, MIT OR X11, BSD, ISC' -production",
    "build": "tsc --noemit && tsup",
    "build-vite": "tsc --noemit && vite build --config vite.build.config.ts",
    "preview": "vite preview",
    "watch": "tsup --watch",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "author": "Daeinc",
  "license": "MIT",
  "dependencies": {
    "@daeinc/canvas": "^0.16.3",
    "@daeinc/dom": "^0.4.1",
    "gifenc": "^1.0.3",
    "mediabunny": "^1.24.3"
  },
  "devDependencies": {
    "@daeinc/color": "^0.2.4",
    "@daeinc/draw": "^0.6.1",
    "@types/node": "^24.10.0",
    "@types/p5": "^1.7.7",
    "@types/three": "^0.181.0",
    "@vitest/coverage-v8": "^4.0.6",
    "@webgpu/types": "^0.1.66",
    "animejs": "^4.2.2",
    "esbuild-plugin-license": "^1.2.3",
    "license-checker": "^25.0.1",
    "ogl": "^1.0.11",
    "p5": "^2.0.5",
    "prettier": "^3.6.2",
    "three": "^0.181.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vite-plugin-ssam-export": "^0.1.3",
    "vite-plugin-ssam-ffmpeg": "^0.2.4",
    "vitest": "^4.0.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cdaein/ssam.git"
  },
  "funding": [
    {
